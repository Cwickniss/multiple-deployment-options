{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Multiple Deployment Options",
  "description": "",
  "longDescription": "The Delivery Pipeline automates the continuous deployment of the repository.",
  "type": "object",
  "properties": {
    "deploy-region": {
      "description": "The bluemix region",
      "type": "string"
    },
    "deploy-organization": {
      "description": "The bluemix org",
      "type": "string"
    },
    "deploy-space": {
      "description": "The bluemix space",
      "type": "string"
    },
    "deploy-app-name": {
      "description": "The name of the Cloud Foundry application",
      "type": "string"
    },
    "deploy-bluemix-api-key": {
      "description": "An API key to access the Bluemix API. You can obtain one using 'bx iam api-key-create'",
      "type": "string"
    },
    "deploy-cluster-name": {
      "description": "An existing Kubernetes cluster name",
      "type": "string"
    },
    "deploy-image-name": {
      "description": "Name of the Fibonnaci service Docker image",
      "type": "string"
    },
    "deploy-container-space": {
      "description": "Name of the space configured for IBM Container Service",
      "type": "string"
    }
  },
  "required": [
    "deploy-region",
    "deploy-organization",
    "deploy-space",
    "deploy-app-name"
  ],
  "form": [{
      "type": "validator",
      "url": "/devops/setup/bm-helper/helper.html"
    },
    {
      "type": "label",
      "title": "Cloud Foundry and OpenWhisk"
    },
    {
      "type": "table",
      "columnCount": 3,
      "widths": ["33%", "33%", "33%"],
      "items": [
        {
          "type": "label",
          "title": "Region"
        },
        {
          "type": "label",
          "title": "Organization"
        },
        {
          "type": "label",
          "title": "Space"
        },
        {
          "type": "select",
          "key": "deploy-region"
        },
        {
          "type": "select",
          "key": "deploy-organization"
        },
        {
          "type": "select",
          "key": "deploy-space",
          "readonly": false
        }
      ]
    },
    {
      "type": "text",
      "readonly": false,
      "title": "App name",
      "key": "deploy-app-name"
    },
    {
      "type": "label",
      "title": "Docker and Kubernetes"
    },
    {
      "type": "text",
      "readonly": false,
      "title": "Bluemix API key (Obtain one using 'bx iam api-key-create')",
      "key": "deploy-bluemix-api-key"
    },
    {
      "type": "text",
      "readonly": false,
      "title": "Existing Kubernetes cluster name",
      "key": "deploy-cluster-name"
    },
    {
      "type": "text",
      "readonly": false,
      "title": "Name of the Fibonnaci service Docker image (Obtain the Docker namespace using 'bx cr namespace-list')",
      "key": "deploy-image-name"
    },
    {
      "type": "label",
      "title": "Space where IBM Container is setup",
    },
    {
      "type": "select",
      "key": "deploy-container-space",
      "readonly": false,
    }
  ]
}
