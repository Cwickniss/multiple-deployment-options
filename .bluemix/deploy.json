{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Multiple Deployment Options",
  "description": "",
  "longDescription": "The Delivery Pipeline automates the continuous deployment of the repository.",
  "type": "object",
  "properties": {
    "deploy-region": {
      "description": "The bluemix region",
      "type": "string"
    },
    "deploy-organization": {
      "description": "The bluemix org",
      "type": "string"
    },
    "deploy-space": {
      "description": "The bluemix space",
      "type": "string"
    },
    "deploy-app-name": {
      "description": "The name of the Cloud Foundry application",
      "type": "string"
    }
  },
  "required": [
    "deploy-region",
    "deploy-organization",
    "deploy-space",
    "deploy-app-name"
  ],
  "form": [{
      "type": "validator",
      "url": "/devops/setup/bm-helper/helper.html"
    },
    {
      "type": "table",
      "columnCount": 3,
      "widths": ["33%", "33%", "33%"],
      "items": [
        {
          "type": "label",
          "title": "Region"
        },
        {
          "type": "label",
          "title": "Organization"
        },
        {
          "type": "label",
          "title": "Space"
        },
        {
          "type": "select",
          "key": "deploy-region"
        },
        {
          "type": "select",
          "key": "deploy-organization"
        },
        {
          "type": "select",
          "key": "deploy-space",
          "readonly": false
        }
      ]
    },
    {
      "type": "text",
      "readonly": false,
      "title": "App name",
      "key": "deploy-app-name"
    }
  ]
}
